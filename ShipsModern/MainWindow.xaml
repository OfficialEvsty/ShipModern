<Window x:Class="ShipsModern.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920"
        MouseDown="Canvas_MouseDown" MouseUp="Canvas_MouseUp" WindowState="Maximized">
    <Grid>

        <Image Name="fieldImg" Width="1920" Height="1080" ></Image>
        <Canvas Name="modelCanvas" Background="Transparent"></Canvas>
        <StackPanel Margin="10, 10">
            <Button Content="-" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Consolas" FontSize="36" Click="Decrease_Scale"/>
            <Button Content="+" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Consolas" FontSize="36" Click="Increase_Scale"/>
            <Slider Name="timeAcceleratorSlider" ></Slider>
        </StackPanel>
    </Grid>

</Window>
